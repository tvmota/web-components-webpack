@import '../_utilities/_imports'
//renderização máxima de viewport para IE/EDGE em MOBILE/TABLETS
@-ms-viewport
  max-width: 100% !important
  width: auto !important
html
  font: $basefontsize normal
*
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box
// Light reset
html,
body,
blockquote,
figure,
form
  margin: 0
  padding: 0
  height: 100%
body
  background-color: #f5f5f5
  // SISTEMA DE FONTES
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif
  font-weight: 400
  height: auto
  
  &::-webkit-scrollbar
    background-color rgba(#cccccc, 0.5)
    border-radius pxToRem(4)
    width pxToRem(10)
  &::-webkit-scrollbar-track
    border-radius pxToRem(4)
    width pxToRem(10)
  &::-webkit-scrollbar-thumb
    background-color rgba(#515f60, 0.3)
    border-radius pxToRem(4)
    width pxToRem(10)

  //regra para esconder Sprite SVG
  > svg
    &:first-child
      display: none
      
// Remove unwanted borders
form
fieldset
  border none
// Consistency between browsers
abbr
  cursor help
  border-bottom .063rem dotted #bbb
svg
  &:not(:root)
    max-width: 100%

h1
h2
h3
h4
h5
h6
  font-weight 600
  line-height pxToRem(20)
  margin 0
i
em
  font-style italic

strong
b
  font-weight 600
a
  &:visited
    margin-bottom 0   
p
  margin-bottom 0
